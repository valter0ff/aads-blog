%header
  %nav.navbar.navbar-expand-lg.bg-light
    .container
      .navbar-header
        %a.navbar-brand{ href: '#' }= t('.site_title')
      #navbarNavDropdown.collapse.navbar-collapse.justify-content-end
        %ul.navbar-nav
          %li.nav-item
            = link_to t('.home_link'), root_path, class: 'nav-link active home-link'
          - if user_signed_in?
            %li.nav-item.dropdown
              = link_to current_user.first_name, '#',
                  aria: { expanded: false, haspopup: true },
                  data: { 'bs-toggle': 'dropdown' }, role: 'button',
                  class: 'account-menu-button nav-link dropdown-toggle'
              %ul.dropdown-menu.account-menu
                %li= link_to t('.my_posts'), '#', class: 'appointments-link dropdown-item'
                %li.divider{ role: 'separator' }
                %li= link_to t('.logout'),
                  destroy_user_session_path, method: :delete,
                  class: 'logout-button dropdown-item', form_class: 'logout-form'
          - else
            %li.nav-item
              = link_to t('.login'), new_user_session_path, class: 'sign-up-link nav-link'
            %li.nav-item
              = link_to t('.sign_up'), new_user_registration_path, class: 'sign-up-link nav-link'
